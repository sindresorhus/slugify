{
  "name": "tslug",
  "version": "1.0.3",
  "description": "Slugify URLs, filenames and IDs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yakovlevyuri/tslug.git"
  },
  "author": {
    "name": "Yuri Yakovlev",
    "email": "hi@mynameisyuri.com",
    "url": "https://mynameisyuri.com"
  },
  "keywords": [
    "string",
    "slugify",
    "slug",
    "url",
    "url-safe",
    "urlify",
    "transliterate",
    "transliteration",
    "deburr",
    "unicode",
    "ascii",
    "text",
    "decamelize",
    "pretty",
    "clean",
    "filename",
    "id"
  ],
  "engines": {
    "node": ">=6"
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "prettier": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test-ci": "yarn lint && yarn test",
    "precommit": "pretty-quick --staged"
  },
  "dependencies": {
    "lodash.deburr": "^4.1.0",
    "lodash.escaperegexp": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash.deburr": "^4.1.4",
    "@types/lodash.escaperegexp": "^4.1.4",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
